

CXX      :=  g++
CXXFLAGS := -Wall -std=c++11
LDFLAGS  := 
LIBS     := -lsfml-graphics -lsfml-audio -lsfml-window -lsfml-system -lsfml-network #Library sfml
SRC_DIR :=src
INC_DIR :=-I/Include
TEST_DIR:=Test

INCLUDE = $(wildcard $(INC_DIR)/*.hpp) # Liste des fichiers Heather

SRC := $(wildcard $(SRC_DIR)/*.cpp) main.cpp  # Liste des fichiers sources pour le main
OBJ := $(SRC:.cpp=.o) # Liste des fichiers objets

SRCTEST= $(wildcard $(TEST_DIR)/*.cpp) $(wildcard $(SRC_DIR)/*.cpp) tests_catch.cpp   # Liste des fichiers sources pour les tests
OBJTEST := $(SRCTEST:.cpp=.o) # Liste des fichiers objets

all: main tests_catch


main: $(OBJ)
	$(CXX) $(LDFLAGS) -o main $^ $(LIBS)

tests_catch: $(OBJTEST)
	$(CXX) $(LDFLAGS) -o tests_catch $^ $(LIBS)

%.o: $(INCLUDE)



clean:
	rm -rf $(OBJTEST)  $(OBJ)  



